<html>
<head>
  <hta:application id="app" applicationname="CalculatorLauncher" />
  <script type="text/javascript">
    function runCalc() {
      try {
        var shell = new ActiveXObject("WScript.Shell");
        shell.Run("calc.exe");
        window.close();
      } catch (e) {
        alert("An error occurred: " + e.message);
      }
    }
    window.onload = runCalc;
  </script>
</head>
<body>
</body>
</html>
